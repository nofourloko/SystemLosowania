<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SystemLosowania.Controls.UczenKontrol">
    <ContentView.Resources>
        <ControlTemplate x:Key="UczenControlTemplate">
            <Grid ColumnDefinitions="*,*,*">

                <Label  Grid.Column="0"
                        Text="{TemplateBinding Imie}"/>

                <Label  Grid.Column="1"
                        Text="{TemplateBinding Nazwisko}"/>

                <Label  Grid.Column="2"
                        Text="{TemplateBinding Numerek}"/>

            </Grid>

        </ControlTemplate>
    </ContentView.Resources>
</ContentView>

