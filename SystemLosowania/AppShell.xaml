<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SystemLosowania.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:SystemLosowania.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="SystemLosowania">

    <Shell.Resources>
        <StyleSheet Source="../Resources/Styles/PasekTytulowyCSS.css" />
    </Shell.Resources>

     <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:ListaUczniowView}"
        Route="MainPage" />

    <ShellContent
        Title="DodanieUcznia"
        ContentTemplate="{DataTemplate views:DodanieUcznia}"
        Route="DodanieUcznia"/>

</Shell>

